{
  "custom/lp-clock": {
    "format": "",
    "tooltip": false
  },
  "clock#date": {
    "format": "{:%y/%m/%d}",
    "interval": 1,
    "timezone": "Europe/Bratislava",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "weeks-pos": "right",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>{:%W}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },
  "custom/mp-clock": {
    "format": "",
    "tooltip": false
  },
  "custom/clock": {
    "format": "{text}",
    "interval": 1,
    "exec": "$HOME/.config/waybar/scripts/get-time",
    "return-type": "json",
    "restart-interval": 1
  },
  "custom/rp-clock": {
    "format": "",
    "tooltip": false
  }
}
